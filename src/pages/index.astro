<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Theme Build for Astro</title>


</head>
<body>
    <!-- 
    pageheader
    showcase
    features
    pagecontent
    semesters
    pagefooter
     -->

     <!-- begin page header -->

     <header id="pageheader">pageheader</header>

     <!-- end page header -->

     <!-- begin showcase -->

     <section id="showcase">showcase</section>

     <!-- end showcase -->

     <!-- begin features -->

     <section id="features">features</section>

     <!-- end features -->

     <!-- begin pagecontent -->

     <main id="pagecontent">pagecontent</main>

     <!-- end page content -->

     <!-- begin semesters -->

     <section id="semesters">semesters</section>

     <!-- end semesters -->

     <!-- begin pagefooter -->

     <footer id="pagefooter">pagefooter</footer>

     <!-- end pagefooter -->
</body>
</html>

<style>

	:root{
		--color-primary:red;
		--color-secondary:blue;
	}

	html{
		font-size: 62.5%;
		/* allows you to use rems instead of pixels for sizing */
		/* .5rem = 5px 
		1rem = 10px
		1.6rem = 16px
		2rem = 10px
		6rem =60px
		*/
	}

	/* browser reset */
	*, *::before, *::after{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	/* fix browser bounce on mac */

	body{
		overflow-x: auto;
		width: 100%;
		overscroll-behavior: none;
	}

	/* easy pixel calculations with rem */

	body{
		font-size: 1.6rem;
	}
	/* media queries */

	
	#pageheader{
		min-height: 200px;
		background-color: red;
		padding: 1rem;
	}
	#showcase{
		min-height: 200px;
		background-color: orange;
		padding: 1rem;
	}
	#features{
		min-height: 200px;
		background-color: gold;
		padding: 1rem;
	}
	#pagecontent{
		min-height: 200px;
		background-color: green;
		padding: 1rem;
	}
	#semesters{
		min-height: 200px;
		background-color: blue;
		padding: 1rem;
	}
	#pagefooter{
		min-height: 200px;
		background-color: indigo;
		padding: 1rem;
	}

	@media only screen and (min-width:320px){
		body{
			background-color: magenta;
		};
	}
	@media only screen and (min-width:480px){
		body{
			background-color: yellow;
		};
	}
	@media only screen and (min-width:768px){
		body{
			background-color: lime;
		};
	}
	@media only screen and (min-width:1024px){
		body{
			background-color: coral;
		};
	}
</style>